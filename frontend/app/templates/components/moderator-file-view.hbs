<div class="document" data-item=".archived">

    <div class="less-info">
      <i class="fa fa-file-text" aria-hidden="true"></i>
        <span class="grant-number"><input size="9" type="text" name="grant-number" value={{grant.number}} readonly="readonly"></span>
        <span class="pi"><input size="10" type="text" name="pi" value={{grant.document.pifullname}} readonly="readonly"></span>
        <span class="date-submitted"><input size="11" type="text" name="date-submitted" value={{grant.document.datesubmitted}} readonly="readonly"></span>
        <span class="date-published"><input size="11" type="text" name="date-published" value={{grant.document.datepublished}} readonly="readonly"></span>
        <span class="pi-email"><input size="15" type="text" name="pi-email" value={{grant.document.piemail}} readonly="readonly"></span>

    </div>


    <ul class="action-buttons">
        <li class='more-info-button' {{action "moreInfo" this}}>More Info<span class="caret"></span></li>
        <li class='view-document-button' {{action "viewDocument" this}}>View Document<span class="caret"></span></li>
        <a href={{get-download grant.document.path}} target="_top" >Download</a>
    </ul>

    <div class='more-info'>
        <table>
            <thead>
            <tr>
                <th scope="row">
                    File Name
                </th>
                <td class="fileName" colspan="2">
                    <ul>
                        <li>{{grant.document.title}}</li>
                        <li><a href={{get-api grant.document.path}} target="_blank">View File API</a></li>
                    </ul>
                </td>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">
                    Affiliation
                </th>
                <td class="affiliation" colspan="2">
                    <ul>
                        <li>Publisher: {{grant.document.publisher}}</li>
                        <li>Institution: {{grant.document.institution}}</li>
                    </ul>

                </td>
            </tr>
            <tr>
                <th scope="row">
                    Status
                </th>
                <td class=" " colspan="2">
                    <span class="btn-primary">Archive</span>
                    <span style="margin-left:300px;">
                      <button type="button" class="btn btn-success" {{action "setDocumentStatus" ".read" "#5cb85c" "btn-success"}}>Read</button>
                      <button type="button" class="btn btn-warning" {{action "setDocumentStatus" ".unread" "#eea236" "btn-warning"}}>Unread</button>
                      <button type="button" class="btn btn-primary" {{action "setDocumentStatus" ".archived" "#337ab7" "btn-primary"}}>Archive</button>
                    </span>

                </td>
            </tr>
            <tr>
                <th scope="row">
                    Principal Investigator
                </th>
                <td class=" " colspan="2">
                    {{grant.document.pifullname}} - {{grant.document.piemail}}
                </td>
            </tr>
            <tr>
                <th scope="row">
                    Author(s)
                </th>
                <td class=" " colspan="2">
                    <ul>
                      <li>{{grant.document.authorlist}}</li>
                    </ul>

                </td>
            </tr>
            </tbody>
        </table>




    </div>

      <span class='view-document'>
          {{file-renderer download=(get-download grant.document.path)}}      
      </span>

</div>